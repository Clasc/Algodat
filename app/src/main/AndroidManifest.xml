<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.robert.algodat">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".main_menu.SplashActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".main_menu.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"
            android:noHistory="true"
            android:parentActivityName=".main_menu.MainActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".main_menu.MainActivity" />
        </activity>
        <activity
            android:name=".hash.HashActivity"
            android:label="@string/title_activity_hash_list"
            android:parentActivityName=".main_menu.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.robert.algodat.main_menu.MainActivity" />
        </activity>
        <activity
            android:name=".sort.SortActivity"
            android:label="@string/title_activity_sort"
            android:parentActivityName=".main_menu.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.robert.algodat.main_menu.MainActivity" />
        </activity>
        <activity
            android:name=".ProfileActivity"
            android:label="Profile"
            android:noHistory="true"
            android:parentActivityName=".main_menu.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.robert.algodat.main_menu.MainActivity" />
        </activity>
        <activity
            android:name=".sort.SortSelectionActivity"
            android:label="@string/title_activity_sort_selection"
            android:parentActivityName=".sort.SortActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.robert.algodat.sort.SortActivity" />
        </activity>
        <activity android:name=".main_menu.BaseActivity" />
        <activity
            android:name=".exam.ExamActivity"
            android:label="@string/title_activity_exam"
            android:parentActivityName=".main_menu.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.robert.algodat.main_menu.MainActivity" />
        </activity>
        <activity
            android:name=".hash.HashListFragment"
            android:label="@string/title_activity_hash_list_fagment"
            android:parentActivityName=".hash.HashActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.robert.algodat.hash.HashActivity" />
        </activity>
    </application>

</manifest>